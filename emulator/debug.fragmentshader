#version 330 core

uniform vec3 element_color;
in vec2 UV;
out vec4 color;

uniform sampler2D texture_sampler;

vec3 tolerance = vec3(0.01, 0.01, 0.01);

void main(){
	vec3 texture_color = texture( texture_sampler, UV ).rgb;
	float alpha = 1.0f;
	if (all(lessThan(abs(texture_color - element_color), tolerance))) {
		alpha = 0.0;
	}
	color = vec4(texture_color, alpha);
}